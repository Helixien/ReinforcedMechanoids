<Defs>
	<!-- ================================ Mechanoid Zealot ====================== -->
	<ThingDef ParentName="BaseMechanoidWalker">
		<defName>RM_Mech_Zealot</defName>
		<label>zealot</label>
		<description>Human-sized, Sangheili-class combat mechanoid. Their bodies are well armored, leaving only their heads vulnerable - especially in melee combat.</description>
		<statBases>
			<MoveSpeed>3.0</MoveSpeed>
			<ArmorRating_Blunt>0.20</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.35</ArmorRating_Sharp>
			<PsychicSensitivity>0</PsychicSensitivity>
		</statBases>
		<tools>
			<li>
				<label>left fist</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>15.0</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
				<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
			</li>
			<li>
				<label>right fist</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>15.0</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
				<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>2.5</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>0.1</chanceFactor>
			</li>
		</tools>
		<race>
			<body>RM_Mechanical_Zealot</body>
			<baseHealthScale>1.0</baseHealthScale>
			<soundMeleeHitPawn>Pawn_Melee_Punch_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_Punch_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_Punch_Miss</soundMeleeMiss>
		</race>
		<butcherProducts>
			<Steel>10</Steel>
			<Plasteel>20</Plasteel>
			<ComponentIndustrial>4</ComponentIndustrial>
		</butcherProducts>
		<comps>
			<li Class="AnimalBehaviours.CompProperties_Regeneration">
				<rateInTicks>8</rateInTicks>
			</li>
		</comps>
	</ThingDef>
	<PawnKindDef ParentName="BaseMechanoidKind">
		<defName>RM_Mech_Zealot</defName>
		<label>zealot</label>
		<race>RM_Mech_Zealot</race>
		<combatPower>250</combatPower>
		<lifeStages>
			<li>
				<bodyGraphicData>
					<texPath>Things/Pawn/Mechanoid/Zealot</texPath>
					<graphicClass>Graphic_Multi</graphicClass>
					<drawSize>1.6</drawSize>
					<shadowData>
						<volume>(0.4, 0.8, 0.4)</volume>
					</shadowData>
				</bodyGraphicData>
			</li>
		</lifeStages>
		<destroyGearOnDrop>false</destroyGearOnDrop>
		<weaponMoney>9999~9999</weaponMoney>
		<weaponTags>
			<li>MechanoidGunMedium</li>
			<li>MechanoidGunCoil</li>
		</weaponTags>
	</PawnKindDef>
