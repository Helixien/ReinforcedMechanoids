<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="VFECore.PatchOperationToggableSequence">
		<enabled>False</enabled>
		<label>Enable player mechanoid crafting</label>
		<operations>
			<!-- ================ Ancient Combat Mechanoid ================ -->
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "RM_AncientDroid_CombatBase"]</xpath>
				<value>
					<designationCategory>Misc</designationCategory>
					<researchPrerequisites>
						<li>Fabrication</li>
					</researchPrerequisites>
					<constructionSkillPrerequisite>5</constructionSkillPrerequisite>
				</value>
			</li>
			<!-- ================ Ancient Worker Mechanoid ================ -->
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "RM_AncientDroid_WorkerBase"]</xpath>
				<value>
					<designationCategory>Misc</designationCategory>
					<researchPrerequisites>
						<li>Fabrication</li>
					</researchPrerequisites>
					<constructionSkillPrerequisite>5</constructionSkillPrerequisite>
				</value>
			</li>
			<!-- ================ Ultratech Support Mechanoid ================ -->
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "RM_UltraDroid_SupportBase"]</xpath>
				<value>
					<designationCategory>Misc</designationCategory>
					<researchPrerequisites>
						<li>Fabrication</li>
					</researchPrerequisites>
					<constructionSkillPrerequisite>8</constructionSkillPrerequisite>
				</value>
			</li>
		</operations>
	</Operation>
</Patch>