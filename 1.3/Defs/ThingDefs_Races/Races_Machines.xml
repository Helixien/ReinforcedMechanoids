<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="BaseMechanoid" Name="RM_BaseDroid" Abstract="True">
		<thingClass>VFEMech.Machine</thingClass>
	</ThingDef>
	<ThingDef ParentName="RM_BaseDroid">
		<defName>RM_Droid_Goliath</defName>
		<label>ancient goliath droid</label>
		<description>An ancient, simple minded ranged combat droid. Patrols designated areas analyzing for nearby threats and will autonomously engage them. Unlike most combat drones, this model is capale of using different weapons and consumes very little energy.</description>
		<statBases>
			<MoveSpeed>3.2</MoveSpeed>
			<ArmorRating_Blunt>0.30</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.40</ArmorRating_Sharp>
			<PsychicSensitivity>0.35</PsychicSensitivity>
		</statBases>
		<tools>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>4</power>
				<cooldownTime>2.6</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
			</li>
		</tools>
		<race>
			<intelligence>ToolUser</intelligence>
			<thinkTreeMain>VFE_Mechanoids_ViolentMachine</thinkTreeMain>
			<body>Lancer</body>
			<baseBodySize>1</baseBodySize>
			<baseHealthScale>5</baseHealthScale>
			<lifeStageAges>
				<li>
					<def>MechanoidFullyFormed</def>
					<minAge>0</minAge>
				</li>
			</lifeStageAges>
			<soundCallIntervalRange>3000~8000</soundCallIntervalRange>
			<soundMeleeHitPawn>Pawn_Melee_MechanoidBash_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_MechanoidBash_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_MechanoidBash_Miss</soundMeleeMiss>
		</race>
		<butcherProducts>
			<ComponentSpacer>3</ComponentSpacer>
			<Plasteel>35</Plasteel>
		</butcherProducts>
		<comps>
			<li Class="VFE.Mechanoids.CompProperties_Machine">
				<violent>true</violent>
				<hoursActive>72</hoursActive>
				<canPickupWeapons>true</canPickupWeapons>
			</li>
				<li Class="AnimalBehaviours.CompProperties_Regeneration">
					<rateInTicks>20</rateInTicks>
				</li>
		</comps>
	</ThingDef>
	<PawnKindDef ParentName="BaseMechanoidKind">
		<defName>RM_Droid_Goliath</defName>
		<label>ancient combat droid</label>
		<race>RM_Droid_Goliath</race>
		<combatPower>99999</combatPower>
		<lifeStages>
			<li>
				<bodyGraphicData>
					<texPath>Things/Pawn/Droid/Goliath/Goliath</texPath>
					<graphicClass>Graphic_Multi</graphicClass>
					<drawSize>1.6</drawSize>
					<shadowData>
						<volume>(0.6, 0.8, 0.6)</volume>
					</shadowData>
				</bodyGraphicData>
			</li>
		</lifeStages>
	</PawnKindDef>
</Defs>
