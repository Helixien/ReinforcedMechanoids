<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Core</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/FactionDef[defName = "Mechanoid"]/pawnGroupMakers/li[kindDef="Combat"]/options</xpath>
					<value>
						<RM_Mech_Vulture>10</RM_Mech_Vulture>
					</value>
				</li>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[@Name="CrashedShipPartBase"]/killedLeavings</xpath>
                    <value>
						<RM_VanometricMechanoidCell>1</RM_VanometricMechanoidCell>
                    </value>
                </li>
			</operations>
		</match>
	</Operation>

</Patch>
